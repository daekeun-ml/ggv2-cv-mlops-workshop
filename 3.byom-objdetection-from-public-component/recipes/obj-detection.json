{
  "RecipeFormatVersion": "2020-01-25",
  "ComponentName": "aws.greengrass.TensorFlowLiteObjectDetection",
  "ComponentVersion": "2.1.5",
  "ComponentType": "aws.greengrass.generic",
  "ComponentDescription": "Sample recipe - Object detection inference using TFlite runtime and yolov4 model.",
  "ComponentPublisher": "AWS",
  "ComponentConfiguration": {
    "DefaultConfiguration": {
      "accessControl": {
        "aws.greengrass.ipc.mqttproxy": {
          "aws.greengrass.TensorFlowLiteObjectDetection:mqttproxy:1": {
            "policyDescription": "Allows access to publish via topic ml/tflite/object-detection.",
            "operations": [
              "aws.greengrass#PublishToIoTCore"
            ],
            "resources": [
              "ml/tflite/object-detection"
            ]
          }
        }
      },
      "ImageName": "objects.jpg",
      "InferenceInterval": "5",
      "PublishResultsOnTopic": "ml/tflite/object-detection",
      "ModelResourceKey": {
        "model": "yolov4-model"
      }
    }
  },
  "ComponentDependencies": {
    "variant.TensorFlowLite.ObjectDetection.ModelStore": {
      "VersionRequirement": ">=2.1.5 <2.2.0",
      "DependencyType": "HARD"
    },
    "variant.TensorFlowLite": {
      "VersionRequirement": ">=2.5.0 <2.6.0",
      "DependencyType": "HARD"
    },
    "aws.greengrass.Nucleus": {
      "VersionRequirement": ">=2.0.0 <2.2.0",
      "DependencyType": "SOFT"
    }
  },
  "Manifests": [
    {
      "Platform": {
        "os": "linux",
        "architecture": "amd64"
      },
      "Lifecycle": {
        "setEnv": {
          "TFLITE_OD_MODEL_DIR": "{variant.TensorFlowLite.ObjectDetection.ModelStore:artifacts:decompressedPath}/{configuration:/ModelResourceKey/model}/",
          "DEFAULT_TFLITE_OD_IMAGE_DIR": "{artifacts:decompressedPath}/object_detection/sample_images/"
        },
        "run": {
          "RequiresPrivilege": "true",
          "script": "\n                                export PATH=\"{variant.TensorFlowLite:configuration:/MLRootPath}/greengrass_ml_tflite_conda/bin:$PATH\"\n                                eval \"$({variant.TensorFlowLite:configuration:/MLRootPath}/greengrass_ml_tflite_conda/bin/conda shell.bash hook)\"\n                                conda activate greengrass_ml_tflite_conda\n                                python3 {artifacts:decompressedPath}/object_detection/inference.py"
        }
      },
      "Artifacts": [
        {
          "Uri": "s3://sagemaker-us-east-1-143656149352/ggv2/artifacts/object_detection.zip",
          "Unarchive": "ZIP",
          "Permission": {
            "Read": "OWNER",
            "Execute": "NONE"
          }
        }
      ]
    }
  ],
  "Lifecycle": {}
}